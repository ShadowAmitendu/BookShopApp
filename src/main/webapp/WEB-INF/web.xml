<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Servlet Declarations -->
    <servlet>
        <servlet-name>SearchBookServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.common.SearchBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BrowseBooksServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.customer.BrowseBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.customer.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.customer.UserProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellerProfileServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.seller.SellerProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.customer.PlaceOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.customer.OrderHistoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookByISBNServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.seller.AddBookByISBNServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInventoryServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.seller.UpdateInventoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellerOrdersServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.seller.SellerOrdersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUsersServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.admin.ManageUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveSellerServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.admin.ApproveSellerServlet</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <!-- Common -->
    <servlet>
        <servlet-name>header</servlet-name>
        <servlet-class>header</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>footer</servlet-name>
        <servlet-class>footer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyEmailServlet</servlet-name>
        <servlet-class>com.amitendu.bookstoreapp.servlet.auth.VerifyEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBookServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <!-- Customer Pages -->
    <servlet-mapping>
        <servlet-name>BrowseBooksServlet</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <!-- Authentication -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>
    <!-- Seller Pages -->
    <servlet-mapping>
        <servlet-name>SellerProfileServlet</servlet-name>
        <url-pattern>/seller/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookByISBNServlet</servlet-name>
        <url-pattern>/seller/add-book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInventoryServlet</servlet-name>
        <url-pattern>/seller/inventory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellerOrdersServlet</servlet-name>
        <url-pattern>/seller/orders</url-pattern>
    </servlet-mapping>
    <!-- Admin Pages -->
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveSellerServlet</servlet-name>
        <url-pattern>/admin/approve-seller</url-pattern>
    </servlet-mapping>
    <!-- /root taget file -->
    <welcome-file-list>
        <welcome-file>jsp/common/index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>header</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>footer</servlet-name>
        <url-pattern>/footer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmailServlet</servlet-name>
        <url-pattern>/VerifyEmailServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
